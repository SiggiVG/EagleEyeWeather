<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="edu.sjcny.student.EagleEyeWeather.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/holo_green_dark">

        <ImageView
            android:id="@+id/weather_pic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:cropToPadding="false"
            app:srcCompat="@android:drawable/star_big_off"
            />

        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Today_temp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="10sp"
                android:text="Today"
                android:textColor="@android:color/background_light"
                android:textSize="36sp"
                />
            <TextView
                android:id="@+id/wind_spd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:lineSpacingExtra="10sp"
                android:text="Windspeed"
                android:textColor="@android:color/background_light"
                android:textSize="24sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <!--TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="36sp"
                android:text="Percipitation"
                android:id="@+id/percip"
                android:textColor="@android:color/background_light"
                /-->
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/Tom_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:text="Tomorrow"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/day_3_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:text="Day 3"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/day_4_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:text="Day 4"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/day_5_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:text="Day 5"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/day_6_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:text="Day 6"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        />
    <TextView
        android:id="@+id/day_7_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10sp"
        android:paddingTop="10sp"
        android:text="Day 7"
        android:textColor="@android:color/background_light"
        android:textSize="30sp"
        />
    <Button
        android:id="@+id/web_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="launchBrowser"
        android:text="Weather.com"
        />
</LinearLayout>